{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Portfolio Data",
  "properties": {
    "socials": {
      "type": "array",
      "description": "Your social links.",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["email", "x", "github"]
          },
          "label": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": ["type", "label", "url"]
      }
    },
    "languages": {
      "type": "array",
      "description": "Programming languages you use.",
      "items": {
        "type": "string",
        "enum": ["html5", "css", "js", "ts"]
      },
      "uniqueItems": true
    },
    "libraries": {
      "type": "array",
      "description": "Libraries you use.",
      "items": {
        "type": "string",
        "enum": ["react", "react-native", "next.js", "expo", "tailwindcss", "framer-motion", "electron"]
      },
      "uniqueItems": true
    },
    "tools": {
      "type": "array",
      "description": "Tools you use.",
      "items": {
        "type": "string",
        "enum": ["arc", "vscode", "discord", "pnpm", "bun", "vercel"]
      },
      "uniqueItems": true
    },
    "projects": {
      "type": "array",
      "description": "Projects you make.",
      "items": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string",
            "description": "Project id."
          },
          "image": {
            "type": "string",
            "description": "Relative path to the project image.",
            "format": "uri-reference"
          },
          "urls": {
            "type": "object",
            "description": "Urls of the project.",
            "properties": {
              "src": {
                "type": "string",
                "format": "uri"
              },
              "demo": {
                "type": "string",
                "format": "uri"
              }
            }
          }
        },
        "required": ["key", "image"]
      }
    }
  }
}
