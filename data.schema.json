{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Portfolio Data",
  "properties": {
    "author": {
      "type": "string",
      "description": "Your name."
    },
    "logo": {
      "type": "string",
      "description": "Your website logo.",
      "format": "uri-reference"
    },
    "banner": {
      "type": "object",
      "description": "Your banners.",
      "properties": {
        "home": {
          "type": "string",
          "format": "uri-reference"
        },
        "about": {
          "type": "string",
          "format": "uri-reference"
        }
      }
    },
    "socials": {
      "type": "array",
      "description": "Your social links.",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["email", "x", "github"]
          },
          "label": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": ["type", "label", "url"]
      }
    },
    "languages": {
      "type": "array",
      "description": "Programming languages you use.",
      "items": {
        "type": "string",
        "enum": ["html5", "css", "js", "ts"]
      },
      "uniqueItems": true
    },
    "libraries": {
      "type": "array",
      "description": "Libraries you use.",
      "items": {
        "type": "string",
        "enum": ["react", "react-native", "next.js", "expo", "tailwindcss", "framer-motion", "electron"]
      },
      "uniqueItems": true
    },
    "tools": {
      "type": "array",
      "description": "Tools you use.",
      "items": {
        "type": "string",
        "enum": ["arc", "vscode", "pnpm", "bun", "vercel"]
      },
      "uniqueItems": true
    },
    "projects": {
      "type": "array",
      "description": "Projects you make.",
      "items": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string",
            "description": "Project id."
          },
          "image": {
            "type": "string",
            "description": "Relative path to the project image.",
            "format": "uri-reference"
          },
          "tech" :{
            "type": "array",
            "description": "Tech you use",
            "items": {
              "type": "string",
              "enum": ["React", "React Native", "Next.js", "Expo", "Tailwind CSS", "Framer Motion", "Electron", "TypeScript", "Tauri", "Rust", "Go", "Firebase"]
            }
          },
          "urls": {
            "type": "object",
            "description": "Urls of the project.",
            "properties": {
              "src": {
                "type": "string",
                "format": "uri"
              },
              "demo": {
                "type": "string",
                "format": "uri"
              }
            }
          }
        },
        "required": ["key", "image"]
      }
    }
  }
}
